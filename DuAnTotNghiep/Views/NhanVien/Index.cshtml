@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="mdi mdi-account-multiple"></i>
        </span>
        Quản lý nhân viên
    </h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh Sách Nhân Viên</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Họ Tên</th>
                                <th>SDT</th>
                                <th>Email</th>
                                <th>Chức vụ</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaNv</td>
                                    <td>@item.HoTenNv</td>
                                    <td>@item.Sdt</td>
                                    <td>@item.Email</td>
                                    <td>@item.ChucVu</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.MaNv" class="btn btn-sm btn-info">Chi tiết</a>
                                        <a asp-action="Edit" asp-route-id="@item.MaNv" class="btn btn-sm btn-warning">Sửa</a>
                                        <a asp-action="Delete" asp-route-id="@item.MaNv" class="btn btn-sm btn-danger">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a asp-action="Create" class="btn btn-gradient-success mt-3">+ Thêm nhân viên</a>
            </div>
        </div>
    </div>
</div>

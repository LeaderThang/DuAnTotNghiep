@using DuAnTotNghiep.Controllers
@model List<POSAdminController.CartItem>

@{
    ViewData["Title"] = "Bán Hàng Tại Quầy";
}

<h1>Bán Hàng Tại Quầy</h1>

<div class="row">
    <div class="col-md-8">
        <h2>Giỏ Hàng</h2>
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Ảnh</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="~/images/@item.Image" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@item.Price.ToString("N0") VND</td>
                            <td>
                                <form asp-action="UpdateCartQuantity" method="post" style="display:inline;">
                                    <input type="hidden" name="productDetailId" value="@item.ProductDetailId" />
                                    <input type="number" name="newQuantity" value="@item.Quantity" min="1" class="form-control" style="width: 80px; display: inline;" onchange="this.form.submit()" />
                                </form>
                            </td>
                            <td>@item.TotalItemPrice.ToString("N0") VND</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post" style="display:inline;">
                                    <input type="hidden" name="productDetailId" value="@item.ProductDetailId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <h3>Tổng Cộng: <span class="text-primary">@ViewBag.TotalPrice.ToString("N0") VND</span></h3>
                <a asp-action="Checkout" class="btn btn-success btn-lg mt-3">Tiến hành Thanh toán</a>
            </div>
        }
        else
        {
            <p>Giỏ hàng trống. Vui lòng thêm sản phẩm.</p>
        }
        <p class="mt-4">
            <a asp-action="Search" class="btn btn-info">Tìm kiếm sản phẩm</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}